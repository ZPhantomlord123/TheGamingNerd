<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Action games</title>
		<link rel="stylesheet" href="/stylesheets/global.css" />
		<link rel="stylesheet" href="/stylesheets/gamecardspage.css" />
		<link rel="stylesheet" href="/stylesheets/mediaquery.css" />
	</head>
	<body>
		<div class="container">
			<div class="gradient-title">
				<h1>Action games</h1>
			</div>
			<div class="card-gallery">
				<!-- generate cards using for loop -->
				<% for (let gamecard of allcards){%>

				<div class="card gradient-div">
					<a href="/games/<%=gamecard._id %>">
						<div class="card-image">
							<img src="<%=gamecard.screenshots[0] %>" alt="" />
						</div>
						<div class="card-name">
							<div class="tags">
								<%for(let gen in gamecard.genres) {%>
								<div class="tag">
									<p><%=gamecard.genres[gen]%></p>
								</div>
								<% } %> <%for(let plt in gamecard.platforms) {%>
								<div class="tag">
									<p><%=gamecard.platforms[plt]%></p>
								</div>
								<% } %>
							</div>
							<div class="gradient-title">
								<h2><%=gamecard.title%></h2>
							</div>
							<p><%=gamecard.short_description%></p>
						</div>
					</a>
				</div>
				<% } %>
			</div>
		</div>
	</body>
</html>

